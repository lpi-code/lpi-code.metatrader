// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
	"name": "Docker in Docker",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"context": ".",
		"dockerfile": "Dockerfile"
	},

	"features": {
		"ghcr.io/hspaans/devcontainer-features/ansible-lint:1": {},
		"ghcr.io/devcontainers-extra/features/ansible:2": {},
		"ghcr.io/devcontainers-extra/features/zsh-plugins:0": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ZainChen.json",
				"redhat.ansible",
				"wholroyd.jinja",
				"ardisaurus.gitflow-actions-sidebar"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
// "forwardPorts": [],

// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "docker --version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	// Set the mount point for the workspace in the container.
	"workspaceMount": "source=${localWorkspaceFolder},target=/ansible/roles/lpi_code.metatrader,type=bind",
	"workspaceFolder": "/ansible/roles/lpi_code.metatrader",
	"containerEnv": {
		"ANSIBLE_ROLES_PATH": "/home/vscode/.ansible/roles:/ansible/roles"
	},
	"postStartCommand": "pip install -r .devcontainer/dev-requirements.txt && ansible-galaxy install -r /ansible/roles/lpi_code.metatrader/requirements.yml"
}